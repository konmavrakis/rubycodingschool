<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <% i=0 %>
    <% until i> @sku.images['alternatives'].size() - 1 %>
    <% i+=1 %>
    <li data-target="#myCarousel" data-slide-to="<%=i%>" ></li>
    <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="<%= @sku.images['main'] %>"class="center-block img-responsive" alt="<%= @sku.name %>"  />
    </div>

  <% @sku.images['alternatives'].each do |image| %>
    <div class="item">
      <img src="<%= image %>"class="center-block img-responsive" alt="<%= @sku.name %>" />
    </div>
  <%end%>
  </div>
  <!-- Left and right controls -->
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
     <span class="glyphicon glyphicon-chevron-left"></span>
     <span class="sr-only">Previous</span>
   </a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next">
     <span class="glyphicon glyphicon-chevron-right"></span>
     <span class="sr-only">Next</span>
   </a>

</div>
