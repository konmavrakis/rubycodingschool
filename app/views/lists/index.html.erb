<h1>Lists <%= link_to 'New List', new_list_path, class: 'btn btn-sm btn-primary'%></h1>

<table  class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td class="names">
          <%= link_to list.name, list %>
        </td>
          <td class="status">
            <%if list.active %>
              <span class="label lb-md label-success">Active</span>
            <% else %>
              <span class="label label-default lb-md">Inactive</span>
            <% end %>
          </td>
        </td>
        <td class="actions"><%= link_to '', edit_list_path(list), class: 'btn btn-md btn-warning glyphicon whiteglyphicon glyphicon-pencil' %></td>
        <td class="actions"><%= link_to '', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-md btn-danger glyphicon whiteglyphicon glyphicon-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="row text-center">
  <hr />
  <div class="pull-right">
    <%= paginate @lists %>
  </div>
  <div class="pull-left">
    <%= page_entries_info @lists %>
  </div>
</div>
