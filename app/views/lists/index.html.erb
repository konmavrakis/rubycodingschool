<p id="notice"><%= notice %></p>

<h1>Lists <%= link_to 'New List', new_list_path, class: 'btn btn-sm btn-primary'%></h1>

<table  class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td class="name"><%= list.name %></td>
        <td class="status"><%=  list.active %></td>
        <td class="actions"><%= link_to 'Show', list, class: 'btn btn-sm btn-primary' %></td>
        <td class="actions"><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-sm btn-warning' %></td>
        <td class="actions"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


